<div class="page-title">
  <h1>Portfolio</h1>
</div>

<div class="card-columns">

  <% @pictures.each do |picture|  %>
    
      <% if picture.is_portfolio_item == true %>
      
      <div class="card bg-dark text-white">
        <div class="card-img"><%= image_tag picture.preview_picture %></div>
        <div class="card-img-overlay">
          <h3 class="card-title d-flex align-items-center justify-content-center "><%= link_to picture.name, picture_path(picture) %></h3>
        </div>
      </div>
      <% end %>

  <% end %>

</div>

