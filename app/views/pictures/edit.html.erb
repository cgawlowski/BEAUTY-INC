<div class="container">  
  <h3 class="form-group">Veuillez modifier votre item</h3>

    <%= form_with model: @picture, method: :patch do |f| %>
      <div class="form-group">
        <%= f.label :name, "Indiquez le nom" %>
        <%= f.text_field :name, class:"form-control", placeholder:"(champ obligatoire)" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Ajoutez une description" %>
        <%= f.text_area :description, class:"form-control" %>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <%= f.label :category, "Ajoutez une catégorie" %>
            <%= f.text_field :category, class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :price, "Indiquez le prix (si nécessaire)" %>
            <%= f.number_field :price, class:"form-control", placeholder:"0,00$ CAD" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <p>Sur quel page souhaitez-vous ajouter votre nouvel item ?</p>
              <div>
                <%= f.check_box :is_home_item %>
                <%= f.label :is_home_item, "Page d'accueil" %>
              </div>
              <div>
                <%= f.check_box :is_portfolio_item %>
                <%= f.label :is_portfolio_item, "Work" %>
              </div>
              <div>
                <%= f.check_box :is_sketchbook_item %>
                <%= f.label :is_sketchbook_item, "Sketchbook" %>
              </div>
            <div>
              <%= f.check_box :is_shopping_item %>
              <%= f.label :is_shopping_item, "Boutique" %>
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <%= f.label :photos, "Sélectionnez vos images" %>
              <%= f.file_field :photos, multiple: true, class:"form-control-file" %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class:"btn btn-lg btn-primary" %>
      </div>
    <% end %>

<% if @picture.is_home_item == true %>
        <%= link_to "Back to the Home page", root_path  %>
    <% elsif @picture.is_portfolio_item == true %>
        <%= link_to "Back to the portfolio", portfolio_path  %>
    <% elsif @picture.is_sketchbook_item == true %>
        <%= link_to "Back to the sketchbook", sketchbook_path  %>
    <% else @picture.is_shopping_item == true %>
        <%= link_to "Back to the shopping page", shopping_path  %>
<% end %></div>