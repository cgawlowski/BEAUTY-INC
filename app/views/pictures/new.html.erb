<div class="navbar">
  <div class="logo">
    <p><%= link_to "Stéphanie Simpson illustration & design logo", root_path %></p>
  </div>
  <div class="menu">    
    <div class="a1">
      <%= link_to "portfolio", portfolio_path %>
    </div>
    <div class="a2">
      <%= link_to "sketchbook", sketchbook_path %>
    </div>
    <div class="a3">
      <%= link_to "boutique", shopping_path %>
    </div>
    <div class="a4">
      <%= link_to "à propos", about_path %>
    </div>
    <div class="a5">
      <% if user_signed_in? && current_user.admin == true  %> 
        <%= link_to "new?", new_picture_path %>
      <% end %>
    </div>
  </div>
</div>

<div class="container">  
  <h3 class="form-group">Veuillez entrer les détails de votre nouvel item</h3>

    <%= form_with model: @picture, method: :post do |f| %>
      <div class="form-group">
        <%= f.label :name, "Indiquez le nom" %>
        <%= f.text_field :name, class:"form-control", placeholder:"(champ obligatoire)" %>
      </div>
      <div class="form-group">
        <%= f.label :description, "Ajoutez une description" %>
        <%= f.text_area :description, class:"form-control" %>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <%= f.label :category, "Ajoutez une catégorie" %>
            <%= f.text_field :category, class:"form-control" %>
          </div>
          <div class="col">
            <%= f.label :price, "Indiquez le prix (si nécessaire)" %>
            <%= f.number_field :price, class:"form-control", placeholder:"0,00$ CAD" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col">
            <p>Sur quel page souhaitez-vous ajouter votre nouvel item ?</p>
              <div>
                <%= f.check_box :is_home_item %>
                <%= f.label :is_home_item, "Page d'accueil" %>
              </div>
              <div>
                <%= f.check_box :is_portfolio_item %>
                <%= f.label :is_portfolio_item, "Work" %>
              </div>
              <div>
                <%= f.check_box :is_sketchbook_item %>
                <%= f.label :is_sketchbook_item, "Sketchbook" %>
              </div>
            <div>
              <%= f.check_box :is_shopping_item %>
              <%= f.label :is_shopping_item, "Boutique" %>
            </div>
          </div>
          <div class="col">
            <div class="form-group">
              <%= f.label :photos, "Sélectionnez vos images" %>
              <%= f.file_field :photos, multiple: true, class:"form-control-file" %>
            </div>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.submit class:"btn btn-lg btn-primary" %>
      </div>
    <% end %>

  <p><%= link_to 'Back to the main page', root_path %></p>
</div>