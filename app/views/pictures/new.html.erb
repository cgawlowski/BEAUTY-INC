<%= form_for @picture do |f| %>
  <%= f.label :name, "Enter a name" %>
  <%= f.text_field :name %>

  <%= f.label :description, "Enter a description" %>
  <%= f.text_area :description %>

  <%= f.label :page, "Where do you want to add this picture?" %>
    <%= label_tag(:home, "Home") %>
    <%= check_box_tag(:home) %>
    <%= label_tag(:portfolio, "Portfolio") %>
    <%= check_box_tag(:portfolio) %>
    <%= label_tag(:sketchbook, "Sketchbook") %>
    <%= check_box_tag(:sketchbook) %>
    <%= label_tag(:shopping, "Shopping") %>
    <%= check_box_tag(:shopping) %>

  <%= f.label :category, "Enter a category" %>
  <%= f.text_field :category %>

  <%= f.label :price, "Enter a price" %>
  <%= f.number_field :price %>$

  <%= f.label :picture %>
  <%= f.file_field :picture %>

  <%= f.submit %>
<% end %>